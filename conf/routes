# Encore
# ~~~~~

# Artists
GET     /api/v2/artists/combined_search.json        controllers.ArtistsController.combinedSearch(latitude: Double, longitude: Double, radius: Double, term: String, tense: String)
GET     /api/v2/artists/picture.json                controllers.ArtistsController.artistPicture(artist_id: String)
GET     /api/v2/artists/info.json                   controllers.ArtistsController.artistInfo(artist_id: String, limit_events: Int)

# Events
GET     /api/v2/events/past.json                    controllers.EventsController.pastEvents(latitude: Double, longitude: Double, radius: Double)
GET     /api/v2/events/today.json                   controllers.EventsController.todaysEvents(latitude: Double, longitude: Double, radius: Double)
GET     /api/v2/events/future.json                  controllers.EventsController.futureEvents(latitude: Double, longitude: Double, radius: Double, page: Int, limit: Int)
GET     /api/v2/events/:event_id.json               controllers.EventsController.singleEvent(event_id: Long)
GET     /api/v2/events/:event_id/seatgeek_url.json  controllers.EventsController.seatgeekUrl(event_id: Long)

# Posts
GET     /api/v2/events/:event_id/posts.json         controllers.PostsController.getList(event_id: Long)
POST    /api/v2/events/:event_id/populate.json      controllers.PostsController.startPopulating(event_id: Long)
GET     /api/v2/events/:event_id/populating.json    controllers.PostsController.checkPopulating(event_id: Long)

# Users
POST    /api/v2/users.json                          controllers.UsersController.create
PATCH   /api/v2/users/:facebook_id                  controllers.UsersController.update(facebook_id: Long)
GET     /api/v2/users/:facebook_id/events.json      controllers.UsersController.listEvents(facebook_id: Long)
GET     /api/v2/users/:facebook_id/events.json      controllers.UsersController.checkEvent(facebook_id: Long)
POST    /api/v2/users/:facebook_id/events.json      controllers.UsersController.addEvent(facebook_id: Long)
DELETE  /api/v2/users/:facebook_id/events/:event_id.json  controllers.UsersController.removeEvent(facebook_id: Long, event_id: Long)
POST    /api/v2/users/:facebook_id/events/:event_id/add_facebook_friends  controllers.UsersController.addFriends(facebook_id: Long, event_id: Long)
GET     /api/v2/users/:facebook_id/events/:event_id/facebook_friends  controllers.UsersController.listFriends(facebook_id: Long, event_id: Long)


# API V1 Fallback
